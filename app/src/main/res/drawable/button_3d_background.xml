<!-- res/drawable/button_3d_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Shadow Layer -->
    <item android:right="8dp" android:left="8dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#4D000000" /> <!-- Semi-transparent shadow color -->
            <corners android:radius="12dp" />  <!-- Rounded corners for shadow -->
        </shape>
    </item>
    <!-- Border Layer -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#AFA27C" /> <!-- Border color -->
            <corners android:radius="12dp" />  <!-- Rounded corners for border -->
        </shape>
    </item>
    <!-- Button Gradient Layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F1E0A1"
                android:endColor="#D4BC5A"
                android:angle="90" /> <!-- Gradient for a button look -->
            <corners android:radius="12dp" />  <!-- Rounded corners for button -->
        </shape>
    </item>
</layer-list>
