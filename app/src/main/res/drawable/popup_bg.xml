<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Optional padding for inner layout -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Optional drop shadow if needed -->
    <!-- NOTE: Android shapes don't support real shadows. For elevation-like effect, apply elevation to View. -->

</shape>